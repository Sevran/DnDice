<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent" android:layout_height="72dp"
        style="?borderlessButtonStyle"
        android:background="@color/colorWhite"
        android:foreground="?selectableItemBackground" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/fav_button"
        android:layout_width="72dp" android:layout_height="72dp"
        app:srcCompat="@drawable/ic_favorite_24dp"
        android:padding="22dp"
        android:foreground="?selectableItemBackgroundBorderless"
        android:tint="@color/md_pink_200"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/backspace_button"
        android:layout_width="72dp" android:layout_height="72dp"
        app:srcCompat="@drawable/ic_backspace_24dp"
        android:layout_alignParentEnd="true"
        android:padding="22dp"
        android:foreground="?selectableItemBackgroundBorderless"
        android:tint="@color/md_blue_grey_200"/>

    <View
        android:id="@+id/display_empty_warning"
        android:layout_width="match_parent" android:layout_height="3dp"
        android:background="@color/md_red_A200"
        android:alpha="0"
        android:layout_marginTop="68dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/shadow_top_to_bottom"
        android:layout_below="@+id/display" />

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_below="@+id/display" android:layout_above="@+id/roll_button"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_below="@+id/display"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/dice_row_1"
                android:layout_width="wrap_content" android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/d2"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textColor="@color/md_green_500"
                    android:text="d2"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/d3"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textColor="@color/md_teal_500"
                    android:text="d3"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/d4"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textColor="@color/md_purple_500"
                    android:text="d4"
                    android:onClick="push_element_to_stack"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dice_row_2"
                android:layout_width="wrap_content" android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/d6"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textColor="@color/md_pink_500"
                    android:text="d6"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/d8"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textColor="@color/md_red_500"
                    android:text="d8"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/d10"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textColor="@color/md_orange_500"
                    android:text="d10"
                    android:onClick="push_element_to_stack"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dice_row_3"
                android:layout_width="wrap_content" android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/d12"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textColor="@color/md_brown_500"
                    android:text="d12"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/d20"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textColor="@color/md_blue_grey_700"
                    android:text="d20"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/d100"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:text="d100"
                    android:onClick="push_element_to_stack"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/keypad"
            android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content" android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:text="1"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:text="2"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:text="3"
                    android:onClick="push_element_to_stack"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content" android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_4"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:text="4"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/button_5"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:layout_below="@+id/button_2"
                    android:text="5"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/button_6"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:text="6"
                    android:onClick="push_element_to_stack"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content" android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_7"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:text="7"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:layout_below="@+id/button_5"
                    android:text="8"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/button_9"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:text="9"
                    android:onClick="push_element_to_stack"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content" android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_plus"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:text="+"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/button_0"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:layout_below="@+id/button_8"
                    android:text="0"
                    android:onClick="push_element_to_stack"/>

                <Button
                    android:id="@+id/button_moins"
                    android:layout_width="0dp" android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:textSize="18sp"
                    android:text="-"
                    android:onClick="push_element_to_stack"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/roll_button"
        android:layout_width="match_parent" android:layout_height="56dp"
        style="?borderlessButtonStyle"
        android:background="@color/colorAccent"
        android:foreground="?selectableItemBackgroundBorderless"
        android:textColor="@color/md_white_1000"
        android:layout_alignParentBottom="true"
        android:text="@string/roll_button" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/result_view"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/formula_var"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@color/md_white_1000"
            android:layout_below="@+id/res_title"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"
            android:layout_marginTop="16dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/result_var"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@color/md_white_1000"
            android:layout_below="@+id/formula_var"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"
            android:textSize="72sp"/>

        <TextView
            android:id="@+id/detail_var"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@color/md_white_1000"
            android:layout_below="@+id/result_var"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingLeft="16dp" android:paddingRight="16dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/replay_result_fab"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_favorite_outlined_24dp"
            android:layout_toStartOf="@+id/close_result_fab"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="64dp"
            app:backgroundTint="@color/md_white_1000"
            app:elevation="6dp"
            app:fabSize="mini"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/close_result_fab"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_clear_24dp"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:layout_marginRight="32dp" android:layout_marginEnd="32dp"
            android:layout_marginBottom="56dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:elevation="6dp"
            app:fabSize="normal"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fav_result_fab"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_replay_24dp"
            app:backgroundTint="@color/md_white_1000"
            android:layout_toEndOf="@+id/close_result_fab"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="64dp"
            app:elevation="6dp"
            app:fabSize="mini"/>

    </RelativeLayout>

</RelativeLayout>
