<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView android:id="@+id/recent_timestamp"
        android:layout_width="64dp" android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="timestamp"
        android:textSize="13sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="?android:textColorPrimary"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="16dp">

        <TextView
            android:id="@+id/recent_result"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="result"
            android:textSize="18sp"
            android:textColor="?android:textColorPrimary"/>

        <TextView
            android:id="@+id/recent_formula"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="formula"/>

        <TextView
            android:id="@+id/recent_detail"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="detail"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/recent_fav_button"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_favorite_outlined_24dp"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_marginEnd="16dp" android:padding="16dp"/>

</LinearLayout>