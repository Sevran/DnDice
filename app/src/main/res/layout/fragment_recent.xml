<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recent_recycler"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        tools:listitem="@layout/row_recent"
        android:background="@color/md_white_1000"
        android:layout_marginBottom="4dp"/>

    <View
        android:layout_width="match_parent" android:layout_height="4dp"
        android:background="@drawable/shadow_top_to_bottom"
        android:layout_below="@+id/recent_recycler"/>

    <RelativeLayout
        android:id="@+id/recent_none_view"
        android:layout_width="wrap_content" android:layout_height="wrap_content">


    </RelativeLayout>

</RelativeLayout>